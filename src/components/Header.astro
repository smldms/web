    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  #main-menu a {
    position: relative;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  #main-menu a::after {
