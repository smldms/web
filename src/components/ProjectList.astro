<style>
  .project-section {
    padding: 8rem 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .section-title {
    font-size: 3rem;
    margin-bottom: 3rem;
    text-transform: capitalize;
    position: relative;
    display: inline-block;
  }

